package vacationDiaryPart2;

import java.util.Scanner;


public class VacationDiaryPart2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
        String response = "";
        char continueChoice = 'y';
        
		Scanner scanner = new Scanner(System.in); 

        
        while (continueChoice != 'n' && continueChoice != 'N') {
            try {
			 
		        System.out.print("Enter Date vacation started (mm/dd/yyyy): ");
		        String startDate = scanner.nextLine();
	
		        System.out.print("Enter City Visited: ");
		        String city = scanner.nextLine();
	
		        System.out.print("Enter Country Visited: ");
		        String country = scanner.nextLine();
	
		        System.out.print("Enter number of days: ");
		        int numberOfDays = scanner.nextInt();
		        scanner.nextLine();  // consume the remaining newline
	
		        System.out.print("Enter Mode of Travel (car, airplane, ship, train, bus): ");
		        String modeOfTravel = scanner.nextLine();
	
		        System.out.println("\nDetails of your trip:");
		        System.out.println("Date: " + startDate);
		        System.out.println("City: " + city);
		        System.out.println("Country: " + country);
		        System.out.println("Number of Days: " + numberOfDays);
		        System.out.println("Travelled By: " + modeOfTravel);
		        System.out.println("Bye!!!");

	        scanner.close();
	    
	
	
		
